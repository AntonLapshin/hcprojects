<Window x:Class="NormManagementMVVM.Windows.WindowDirectoryParameters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Редактирование параметров" Height="400" Width="300"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid">
  <Grid>
    <dxg:GridControl Name="paramGridControl" Grid.Row="0" MouseDoubleClick="ParamGridControlMouseDoubleClick">
      <dxg:GridControl.Columns>
        <dxg:GridColumn FieldName="VALUE" Header="Значение" AllowEditing="false" AutoFilterCondition="Like"
                        FilterPopupMode="CheckedList" />
        <dxg:GridColumn FieldName="NAME" Header="Наименование" AllowEditing="false" AutoFilterCondition="Like"
                        FilterPopupMode="CheckedList" />
      </dxg:GridControl.Columns>
    </dxg:GridControl>    
  </Grid>
</Window>