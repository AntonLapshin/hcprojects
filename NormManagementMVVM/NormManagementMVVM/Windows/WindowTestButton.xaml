<Window x:Class="NormManagement.Windows.WindowTestButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" Title="WindowTestButton" Height="100" Width="300">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Button Name="Add" Grid.Column="0" Template="{DynamicResource GlassButton}">
      <Image Source="..\Images\edit_add.png" />
    </Button>
    <Button Name="Delete" Grid.Column="1" Template="{DynamicResource GlassButton}">
      <Image Source="..\Images\error.ico" />
    </Button>
    <Button Name="Save" Grid.Column="2" Template="{DynamicResource GlassButton}">
      <Image Source="..\Images\ok.ico" />
    </Button>
    <dxe:ButtonEdit Name="Exit" Grid.Column="3">      
    </dxe:ButtonEdit>
  </Grid>
</Window>